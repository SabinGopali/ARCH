# MongoDB
# Local (default used if unset): mongodb://127.0.0.1:27017/emailAuthSystem
MONGO_URI=mongodb://127.0.0.1:27017/emailAuthSystem

# Auth/JWT
JWT_SECRET=replace_with_a_strong_secret

# Email (Gmail SMTP with App Password)
SMTP_EMAIL=your_gmail_address@gmail.com
SMTP_PASS=your_gmail_app_password

# Optional: Twilio SMS (for sending OTP to phone)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+15551234567

# Stripe (if used elsewhere)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx

# CORS origin for the frontend
# Example: http://localhost:5173
FRONTEND_ORIGIN=http://localhost:5173
